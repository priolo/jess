{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true, // Aggiungi questa linea
    "declarationMap": true // Opzionale, per generare mappe di dichiarazione
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.test.ts"]
}