{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true, 
    "declarationMap": true,
    "strictNullChecks": false,
    "noImplicitAny": false
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.test.ts"]
}