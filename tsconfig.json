{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true, // Aggiungi questa linea
    "declarationMap": true, // Opzionale, per generare mappe di dichiarazione
    "strictNullChecks": false,
    "noImplicitAny": false
  },
  "include": ["src", "tests/SharedObject.slate.test.ts", "tests/SharedObject.array.test.ts"],
  "exclude": ["node_modules", "**/*.test.ts"]
}